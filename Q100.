//Print all sub-strings of a string.

#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int i, j, k, len;

    printf("Enter a string: ");
    scanf("%s", str);

    len = strlen(str);

    printf("All substrings of the string are:\n");

    for (i = 0; i < len; i++) {           // starting index
        for (j = i; j < len; j++) {       // ending index
            for (k = i; k <= j; k++) {    // print characters from i to j
                printf("%c", str[k]);
            }
            printf("\n");
        }
    }

    return 0;
}
