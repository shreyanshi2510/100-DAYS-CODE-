//Write a program to find the sum of the series: 1 + 3/4 + 5/6 + 7/8 + â€¦ up to n terms.

#include <stdio.h>

int main() {
    int n;
    float sum = 0.0;

    printf("Enter number of terms: ");
    scanf("%d", &n);

    int numerator = 1;
    int denominator = 1;

    for(int i = 1; i <= n; i++) {
        sum += (float)numerator / denominator;
        numerator += 2;       // next odd number
        
        if(i == 1)
            denominator = 4;  // after first term, start from 4
        else
            denominator += 2; // increase denominator by 2 each term
    }

    printf("Sum of the series = %.2f\n", sum);

    return 0;
}
