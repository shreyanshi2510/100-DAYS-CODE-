//Write a program to print the following pattern:
*****
 ****
  ***
   **
    *

    #include <stdio.h>

int main() {
    int i, j, spaces, stars;

    for(i = 5; i >= 1; i--) {
        spaces = 5 - i;     // increasing spaces
        stars = i;          // decreasing stars

        for(j = 1; j <= spaces; j++) {
            printf(" ");
        }
        for(j = 1; j <= stars; j++) {
            printf("*");
        }

        printf("\n");
    }

    return 0;
}
